<!DOCTYPE html>
<html lang="en">
    <%- include ('partials/head') %>
<body>
    <%- include ('partials/header') %>
    <main class="perfilMain">
        <%- include ('partials/sideBar') %>
        
        <section class="perfilSection">

            <p class="tituloPerfil">Perfíl</p>

        <div class="infoUser">
            <div class="divImgUser">
                <img src="/images/usuarios/img servicio.jpeg" class="imgUser">
            </div>
            <div class="divDatosUser">
                <p class="datosUser">
                    Usuario: <%= usuario.usuario%><br>
                    Email: <%= usuario.email%><br>
                    Nombres: <%= usuario.nombres%><br>
                    Apellidos: <%= usuario.apellidos%><br>
                    DNI: <%= usuario.dni%><br>
                    Fecha de Nacimiento: <%= usuario.nacimiento%><br>
                    Provincia: <%= usuario.provincia%><br>
                    Localidad: <%= usuario.localidad%><br>
                    Domicilio: <%= usuario.domicilio%><br>
                    Código Postal: <%= usuario.cp%><br>
                    Teléfono: <%= usuario.telefono%><br>
                </p>
            </div>
        </div>

        <div class="botones">
        
            <form action="/" method="GET">

                <button type="submit" class="botonContraseña">Cambiar contraseña</button>
                <button type="submit" class="botonFoto">Cambiar foto de perfíl</button>    

            </form>
        
        </div>

        <section class="seccionDatos">

            <p class="tituloPerfil">Datos</p>

            <div class="datosPerfil">
               
                    <form action="#" method="#"></form>
                    <div class="datos">
                        
                        <div class="contenerdorPerfilFormulario">
                            <div class="contenedorPerfilLabel">
                                <label for="nombres">Nombres:</label>
                            </div>
                            <div class="ContenedorPerfilInput">
                                <input class="perfilDato" type="text" name="nombres" id="nombres" value="<%= usuario.nombres%>" placeholder="Ej: Pablo Pablo" >
                            </div>
                        </div>
                        
                        <div class="contenerdorPerfilFormulario">
                            <div class="contenedorPerfilLabel">
                                <label for="apellidos">Apellidos:</label>
                            </div>
                            <div class="ContenedorPerfilInput">
                                <input class="perfilDato" type="text" name="apellidos" id="apellidos" value="<%= usuario.apellidos%>" placeholder="Ej: García Suarez">
                            </div>
                        </div>

                        <div class="contenerdorPerfilFormulario">
                            <div class="contenedorPerfilLabel">
                                <label for="dni">N° Doc.:</label>
                            </div>
                            <div class="ContenedorPerfilInput">
                                <input class="perfilDato" type="number" name="dni" id="dni" minlength="7" value="<%= usuario.dni%>" placeholder="Ingresar DNI sin puntos">
                            </div>
                        </div>

                        <div class="contenerdorPerfilFormulario">
                            <div class="contenedorPerfilLabel">
                                <label for="nacimiento">Fecha de nac.:</label>
                            </div>
                            <div class="ContenedorPerfilInput">
                                <input class="perfilDato" type="date" name="nacimiento" id="nacimiento" value="<%= usuario.nacimiento%>">
                            </div>
                        </div>
                        
                        <div class="contenerdorPerfilFormulario">
                            <div class="contenedorPerfilLabel">
                                <label for="provincia">Provincia:</label>
                            </div>
                            <div class="ContenedorPerfilInput">
                                <input class="perfilDato" type="text" name="provincia" id="provincia" value="<%= usuario.provincia%>" placeholder="Ej: Buenos Aires">
                            </div>
                        </div>
                        
                        <div class="contenerdorPerfilFormulario">
                            <div class="contenedorPerfilLabel">
                                <label for="localidad">Localidad:</label>
                            </div>
                            <div class="ContenedorPerfilInput">
                                <input class="perfilDato" type="text" name="localidad" id="localidad" value="<%= usuario.localidad%>" placeholder="Ej: Mar del Plata">
                            </div>
                        </div>
                        
                        <div class="contenerdorPerfilFormulario">
                            <div class="contenedorPerfilLabel">
                                <label for="domicilio">Domicilio:</label>
                            </div>
                            <div class="ContenedorPerfilInput">
                                <input class="perfilDato" type="text" name="domicilio" id="domicilio" value="<%= usuario.domicilio%>" placeholder="Calle y Número">
                            </div>
                        </div>
                        
                        <div class="contenerdorPerfilFormulario">
                            <div class="contenedorPerfilLabel">
                                <label for="cp">Cod. postal</label>
                            </div>
                            <div class="ContenedorPerfilInput">
                                <input class="perfilDato" type="number" name="cp" id="cp" value="<%= usuario.cp%>" placeholder="Ej: 7600">
                            </div>
                        </div>
                                                
                        <div class="contenerdorPerfilFormulario">
                            <div class="contenedorPerfilLabel">
                                <label for="telefono">Teléfono:</label>
                            </div>
                            <div class="ContenedorPerfilInput">
                                <input class="perfilDato" type="tel" name="telefono" id="telefono" minlength="10" value="<%= usuario.telefono%>" placeholder="Ej: 2235333330">
                            </div>
                        </div>
                        
                  
                    </div>
                    <div>
                        <input class="perfil-botonEditar" type="submit">
                    </div>
            </div>
        </section>


    </section>

    </main>    
    <%- include ('partials/footer') %>
</body>

</html> 